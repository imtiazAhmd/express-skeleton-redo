{
    "name": "express-skeleton",
    "version": "1.0.0",
    "description": "Express.js app with native CSRF, SCSS, esbuild, and Nunjucks",
    "main": "public/js/app.js",
    "type": "module",
    "scripts": {
        "start": "node public/js/app.js",
        "build": "node esbuild.js",
        "dev": "nodemon --watch src --ext js,scss --exec 'node start-server.js'",
        "clean": "rimraf public"
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "govuk-frontend": "^5.6.0",
        "nunjucks": "^3.2.4"
    },
    "devDependencies": {
        "builtin-modules": "^4.0.0",
        "chokidar": "^3.6.0",
        "connect-livereload": "^0.6.1",
        "esbuild": "^0.23.1",
        "esbuild-plugin-copy": "^2.1.1",
        "esbuild-sass-plugin": "^3.3.1",
        "fs-extra": "^11.2.0",
        "livereload": "^0.9.3",
        "nodemon": "^3.1.6",
        "rimraf": "^6.0.1",
        "sass": "^1.79.2"
    }
}
